{
    "name": "somnambulist/validation",
    "type": "library",
    "description": "A re-write of rakit/validation providing Laravel like validation as a standalone library",
    "keywords": [
        "php",
        "validation",
        "symfony"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        },
        {
            "name": "Florian KrÃ¤mer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.16",
        "doctrine/dbal": "~3.1.0",
        "ramsey/uuid": "^4.1",
        "symfony/var-dumper": "^5.3",
        "phpstan/phpstan": "^1.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Somnambulist\\Components\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Components\\Validation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs",
            "phpstan"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin"
    }
}
